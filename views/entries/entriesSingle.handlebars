<h1>Entry Details</h1>
<div class="entry">
    <h2>Date: {{formatDate entry.date}}</h2>
    {{#if entry.updatedOn}}
    <h2>Edited on: {{formatDate entry.updatedOn}}</h2>
    {{/if}}
    <p>Notes: {{entry.notes}}</p>

    <h3>Emotion: {{emotion.name}}</h3>
    <h3>Energy: {{energy.name}}</h3>

    <h3>Activities:</h3>
    <ul>
        {{#each activities}}
        <li>{{this.name}}</li>
        {{else}}
        <li>No activities</li>
        {{/each}}
    </ul>

    <h3>Socials:</h3>
    <ul>
        {{#each socials}}
        <li>{{this.name}}</li>
        {{else}}
        <li>No social interactions</li>
        {{/each}}
    </ul>


    <!-- button to edit -->
    <button><a href="/entries/{{entry._id}}/edit">Edit Entry</a></button>

    <!-- button to delete -->
    <form action="/entries/{{entry._id}}/delete" method="POST">
        <input type="hidden" name="userId" value="{{entry.userId}}">
        <button type="submit">Delete Entry</button>
    </form>


    <a href="/entries">Back to all Entries</a>
</div>